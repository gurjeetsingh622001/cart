@model WebApplication2.Models.view.ImageCreateModel;
@{
    ViewData["Title"] = "ImageUpload";
}



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Login</h2>
            <h2 class="text-center text-danger mt-4">@TempData["ImageUploadingMessages"]</h2>
            <form enctype="multipart/form-data" asp-action="UploadImage">
                <div class="form-group">
                    <label asp-for="Name">Image Name</label>
                    <input type="name" asp-for="Name" class="form-control" required>
                </div>
                <div class="form-group">
                    <label asp-for="ImagePath">Image</label>
                    <input type="file" class="form-control" asp-for="ImagePath" required>
                </div>
                <button type="submit" class="btn mt-2 btn-primary btn-block">upload</button>
            </form>
        </div>
    </div>
</div>

