@model WebApplication2.Models.UserLoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/loginLayout.cshtml";
}



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Login</h2>
            <h2 class="text-center text-danger mt-4">@TempData["loginErrorMessages"]</h2>
            
            <form method="post" asp-action="Login">
                <div class="form-group">
                    <label asp-for="Email">Username:</label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Enter your username" required>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password:</label>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Enter your password" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Login</button>
                <a asp-action="Register">Signup</a>
            </form>
        </div>
    </div>
</div>

