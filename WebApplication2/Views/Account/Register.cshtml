@model WebApplication2.Models.User
@{
    ViewData["Title"] = "Register Page";
    Layout = "~/Views/Shared/loginLayout.cshtml";
}
<div class="container">
    <h2 class="text-center mt-4">User Registration</h2>
    <h2 class="text-center mt-4">@ViewData["Title"]</h2>
    <h2 class="text-center text-danger mt-4">@TempData["alreadyExit"]</h2>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 justify-content-center">
            <div class="registration-form">
                <form method="post" asp-action="Register">
                    <div class="form-group">
                        <label asp-for="Name">First Name:</label>
                        <input type="text" asp-for="Name" class="form-control">
                        @*<span asp-validation-for="Name" class="text-danger"></span>*@
                    </div>

                    <div class="form-group">
                        <label asp-for="Email">Email Address:</label>
                        <input type="email" asp-for="Email" class="form-control">
                        @*<span asp-validation-for="Email" class="text-danger"></span>*@
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone">Phone Number</label>
                        <input type="number" asp-for="Phone" class="form-control">
                        @*<span asp-validation-for="Phone" class="text-danger"></span>*@
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password:</label>
                        <input type="password" asp-for="Password" class="form-control">
                        @*<span asp-validation-for="Password" class="text-danger"></span>*@
                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                    <a asp-action="Login">Already have a account</a>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>

